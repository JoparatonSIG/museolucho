<table class="table table-bordred table-striped">
  <thead>
    <tr>
      <th class="cell-stat text-center">id</th>
      <th class="cell-stat text-center">categoria</th>
      <th class="cell-stat text-center">Accion</th>
      <th class="cell-stat text-center">Accion</th>
    </tr>
  </thead>
  <tbody>
    <% var i; for (i=0; i < niveles.length; i++) { %>
      <tr>
        <td class="text-center"><%= niveles[i].id %></td>
        <td class="text-center"><%= niveles[i].categoria %></td>
        <td>
          <a href="/web/nivel/<%= niveles[i].id %>" class="btn btn-info" role="button">
            <p data-placement="top" data-toggle="tooltip" title="Edit">
              <button type="button" class="btn btn-info">Edit</button>
            </p>
          </a>
        </td>
        <form id="topicForm" method="post" action="/web/nivel/<%= niveles[i].id %>">
          <input type="hidden" name="_method" value="delete"/>
          <input type="hidden" name="id" value="<%= niveles[i].id %>"/>               
          <td>
            <a href="/web/nivel/<%= niveles[i].id %>" class="btn btn-info" role="button">
              <p data-placement="top" data-toggle="tooltip" title="Delete">
                <button type="submit" class="btn btn-info">Delete</button>
              </p>
            </a>
          </td>
        </form>
      </tr>
    <% } %>
  </tbody>
</table>
